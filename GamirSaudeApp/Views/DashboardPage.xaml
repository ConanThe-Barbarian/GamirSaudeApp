<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GamirSaudeApp.ViewModels"
             x:Class="GamirSaudeApp.Views.DashboardPage"
             x:DataType="viewmodels:DashboardViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <!-- GATILHO: Recarrega dados ao voltar para a tela (caso tenha verificado no perfil) -->
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding PageAppearingCommand}" 
                                        xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"/>
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto, *, Auto">

        <!-- 1. CABEÇALHO -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Padding="20,15" BackgroundColor="White">
            <HorizontalStackLayout Grid.Column="0" Spacing="10">
                <Frame HeightRequest="50" WidthRequest="50" CornerRadius="25" Padding="0" IsClippedToBounds="True" BorderColor="#D6E4FF">
                    <Grid>
                        <Image Source="user_avatar.png" Aspect="AspectFill" BackgroundColor="#E3E9FF" IsVisible="{Binding NaoTemFoto}"/>

                        <Image Source="{Binding FotoUsuario}" Aspect="AspectFill" IsVisible="{Binding TemFoto}"/>
                    </Grid>
                </Frame>
                
                <VerticalStackLayout VerticalOptions="Center">
                    <Label Text="{Binding NomeUsuario, StringFormat='Olá, {0}'}" TextColor="Black" FontAttributes="Bold" FontSize="16"/>
                    <Label Text="{Binding PontosFidelidade, StringFormat='{0} Pontos'}" TextColor="#666666" FontSize="12"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <ImageButton Grid.Column="2" Source="settings_icon.png" HeightRequest="30" WidthRequest="30" Command="{Binding NavigateToProfileCommand}"/>
        </Grid>

        <!-- 2. CONTEÚDO PRINCIPAL -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="0">

                <!-- ÁREA DE DESTAQUE (Muda conforme status) -->
                <Grid>
                    <!-- Fundo Azul decorativo -->
                    <BoxView Color="#E3E9FF" HeightRequest="280" VerticalOptions="Start" IsVisible="{Binding IsContaVerificada}"/>

                    <!-- CASO 1: CONTA VERIFICADA (Card Azul - Último Agendamento) -->
                    <Border IsVisible="{Binding IsContaVerificada}"
                            BackgroundColor="White" 
                            StrokeShape="RoundRectangle 0" 
                            StrokeThickness="0"
                            HeightRequest="220"
                            WidthRequest="320"
                            Margin="0,40,0,40"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Border.Shadow>
                            <Shadow Brush="Gray" Offset="2,2" Radius="5" Opacity="0.2"/>
                        </Border.Shadow>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="Ultimo" TextColor="#8EA6CC" FontSize="22" HorizontalOptions="Center"/>
                            <Label Text="Agendamento" TextColor="#8EA6CC" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- CASO 2: CONTA NÃO VERIFICADA (Card Amarelo - Aviso) -->
                    <Border IsVisible="{Binding IsContaNaoVerificada}"
                            BackgroundColor="#E8D8B0" 
                            Stroke="#F2994A"
                            StrokeThickness="2"
                            StrokeShape="RoundRectangle 15" 
                            HeightRequest="180"
                            WidthRequest="320"
                            Margin="0,40,0,40"
                            Padding="20"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Border.GestureRecognizers>
                            <!-- Clicar no aviso leva para verificar -->
                            <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}"/>
                        </Border.GestureRecognizers>

                        <VerticalStackLayout VerticalOptions="Center" Spacing="15">
                            <Label Text="Sua Conta Nao Esta Verificada" 
                                   TextColor="#F2994A" 
                                   FontSize="18" 
                                   FontAttributes="Bold" 
                                   HorizontalTextAlignment="Center"/>

                            <Label Text="Acesse Seu Perfil Para Verififcar Sua Conta E Ter Acesso A Todos Os Recursos" 
                                   TextColor="Black" 
                                   FontSize="14" 
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- BOTÕES DE AÇÃO -->
                <VerticalStackLayout Padding="30,10" Spacing="15" BackgroundColor="White">

                    <Button Text="Agendar consulta"
                            Command="{Binding NavigateToAgendarConsultaCommand}"
                            BackgroundColor="#D6E4FF"
                            TextColor="#0098DA"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>

                    <Button Text="Agendar exame"
                            Command="{Binding NavigateToAgendarExameCommand}"
                            BackgroundColor="#D6E4FF"
                            TextColor="#0098DA"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>

                    <Button Text="Meus agendamentos"
                            Command="{Binding NavigateToMeusAgendamentosCommand}"
                            BackgroundColor="#E0E0E0"
                            TextColor="#0098DA"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            BorderColor="#0098DA"
                            BorderWidth="2"
                            HeightRequest="55"/>

                    <Button Text="Meus laudos"
                            Command="{Binding NavigateToMeusLaudosCommand}"
                            BackgroundColor="#D6E4FF"
                            TextColor="#0098DA"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>

                    <Button Text="Contato"
                            BackgroundColor="#D6E4FF"
                            TextColor="#0098DA"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="55"/>

                    <BoxView HeightRequest="80" Color="Transparent"/>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- 3. BARRA INFERIOR -->
        <Border Grid.Row="2" Margin="20,10,20,20" StrokeShape="RoundRectangle 20" StrokeThickness="0" BackgroundColor="#0098DA" HeightRequest="60" VerticalOptions="End">
            <Grid ColumnDefinitions="*,*,*,*">
                <Image Grid.Column="0" Source="home_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding HomeCommand}" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Grid.Column="1" Source="chat_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChatCommand}" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Grid.Column="2" Source="profile_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToProfileCommand}" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Grid.Column="3" Source="calendar_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CalendarCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>

    </Grid>
</ContentPage>