<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GamirSaudeApp.ViewModels"
             xmlns:models="clr-namespace:GamirSaudeApp.Models"
             x:Class="GamirSaudeApp.Views.DashboardPage"
             x:DataType="viewmodels:DashboardViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F9F9F9">

    <Grid RowDefinitions="*, 60" RowSpacing="0">

        <ScrollView Grid.Row="0">
            <Grid RowDefinitions="Auto, Auto, Auto, *" Padding="0,0,0,20">

                <Grid Grid.Row="0" BackgroundColor="#0098DA" HeightRequest="210" Padding="25,30,25,0">

                    <Grid ColumnDefinitions="*, Auto" VerticalOptions="Start" Margin="0,20,0,0">

                        <HorizontalStackLayout Grid.Column="0" Spacing="15" VerticalOptions="Center">
                            <Border StrokeShape="RoundRectangle 35" HeightRequest="70" WidthRequest="70" 
                                    StrokeThickness="2" Stroke="White" BackgroundColor="White">
                                <Image Source="{Binding FotoPerfilSource}" 
                                       Aspect="AspectFill" HeightRequest="70" WidthRequest="70"/>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding IrParaPerfilCommand}"/>
                                </Border.GestureRecognizers>
                            </Border>
                            <VerticalStackLayout VerticalOptions="Center">
                                <Label Text="Olá," TextColor="#CCFFFFFF" FontSize="16"/>
                                <Label Text="{Binding NomeUsuario}" TextColor="White" FontSize="24" FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <Border Grid.Column="1" StrokeShape="RoundRectangle 20" StrokeThickness="1" Stroke="#80FFFFFF" 
                                BackgroundColor="#33FFFFFF" Padding="12,8" VerticalOptions="Center">
                            <HorizontalStackLayout Spacing="5" VerticalOptions="Center">
                                <Label Text="⭐" TextColor="#FFD700" FontSize="30" VerticalOptions="Center"/>
                                <VerticalStackLayout Spacing="0">
                                    <Label Text="{Binding PontosFidelidade}" TextColor="White" FontAttributes="Bold" FontSize="16" HorizontalOptions="End"/>
                                    <Label Text="Pontos" TextColor="#E0E0E0" FontSize="10" HorizontalOptions="End"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Border>

                    </Grid>
                </Grid>

                <VerticalStackLayout Grid.Row="1" Margin="0,-1,15,0" Spacing="10">
                    <CarouselView ItemsSource="{Binding Banners}" HeightRequest="175" PeekAreaInsets="5" Loop="False" IndicatorView="indicatorView">
                        <CarouselView.ItemTemplate>
                            <DataTemplate x:DataType="models:DashboardBannerItem">
                                <Border StrokeShape="RoundRectangle 20" StrokeThickness="0" BackgroundColor="{Binding CorFundo}" Margin="10,0" Padding="20">
                                    <Border.Shadow>
                                        <Shadow Brush="Black" Opacity="0.25" Radius="10" Offset="0,5"/>
                                    </Border.Shadow>
                                    <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="*, Auto">
                                        <Image Grid.RowSpan="3" Grid.ColumnSpan="2" Source="{Binding Icone}" Opacity="0.15" Aspect="AspectFit" HeightRequest="100" HorizontalOptions="End" VerticalOptions="Center" TranslationX="10"/>
                                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Titulo}" TextColor="White" Opacity="0.9" FontSize="13" FontAttributes="Bold" TextTransform="Uppercase"/>
                                        <VerticalStackLayout Grid.Row="1" Grid.Column="0" VerticalOptions="Center" Spacing="4">
                                            <Label Text="{Binding DetalhePrincipal}" TextColor="White" FontSize="22" FontAttributes="Bold" LineBreakMode="WordWrap"/>
                                            <Label Text="{Binding Descricao}" TextColor="White" FontSize="13" LineBreakMode="TailTruncation"/>
                                        </VerticalStackLayout>
                                        <Button Grid.Row="2" Grid.ColumnSpan="2" Text="Ver Detalhes" IsVisible="{Binding IsAgendamento}" Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DashboardViewModel}}, Path=VerDetalhesAgendamentoCommand}" BackgroundColor="White" TextColor="{Binding CorFundo}" FontAttributes="Bold" FontSize="12" CornerRadius="15" HeightRequest="35" HorizontalOptions="Start" Margin="0,10,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicatorView" IndicatorColor="#DDDDDD" SelectedIndicatorColor="#0098DA" HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <Grid Grid.Row="2" RowDefinitions="Auto, Auto" ColumnDefinitions="*,*" ColumnSpacing="15" RowSpacing="15" Padding="25,20">
                    <Border Grid.Row="0" Grid.Column="0" StrokeShape="RoundRectangle 15" BackgroundColor="White" HeightRequest="110" StrokeThickness="0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.05" Radius="5" Offset="0,2"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NovaConsultaCommand}"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                            <Image Source="ic_nova_consulta.jpg" HeightRequest="40" Aspect="AspectFit"/>
                            <Label Text="Nova Consulta" TextColor="#0098DA" FontAttributes="Bold" FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" StrokeShape="RoundRectangle 15" BackgroundColor="White" HeightRequest="110" StrokeThickness="0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.05" Radius="5" Offset="0,2"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NovoExameCommand}"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                            <Image Source="ic_novo_exame.png" HeightRequest="50" Aspect="AspectFit"/>
                            <Label Text="Agendar Exame" TextColor="#0098DA" FontAttributes="Bold" FontSize="14"/>
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="0" StrokeShape="RoundRectangle 15" BackgroundColor="White" HeightRequest="110" StrokeThickness="0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.05" Radius="5" Offset="0,2"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding MeusAgendamentosCommand}"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                            <Image Source="ic_meus_agendamentos.png" HeightRequest="40" Aspect="AspectFit"/>
                            <Label Text="Meus Agendamentos" TextColor="#0098DA" FontAttributes="Bold" FontSize="12" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" StrokeShape="RoundRectangle 15" BackgroundColor="White" HeightRequest="110" StrokeThickness="0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.05" Radius="5" Offset="0,2"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding MeusLaudosCommand}"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                            <Image Source="ic_resultados_laudos.png" HeightRequest="50" Aspect="AspectFit"/>
                            <Label Text="Resultados (Laudos)" TextColor="#0098DA" FontAttributes="Bold" FontSize="12" HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </Grid>
        </ScrollView>

        <Border Grid.Row="1" BackgroundColor="White" StrokeThickness="0" Padding="0" Margin="0" VerticalOptions="Fill">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,-5"/>
            </Border.Shadow>
            <Grid ColumnDefinitions="*,*,*,*">
                <ImageButton Grid.Column="0" Source="home_icon.png" HeightRequest="28" BackgroundColor="Transparent" Command="{Binding HomeCommand}" VerticalOptions="Center"/>
                <ImageButton Grid.Column="1" Source="chat_icon.png" HeightRequest="28" BackgroundColor="Transparent" Command="{Binding ChatCommand}" VerticalOptions="Center"/>
                <ImageButton Grid.Column="2" Source="profile_icon.png" HeightRequest="28" BackgroundColor="Transparent" Command="{Binding ProfileCommand}" VerticalOptions="Center"/>
                <ImageButton Grid.Column="3" Source="calendar_icon.png" HeightRequest="28" BackgroundColor="Transparent" Command="{Binding CalendarCommand}" VerticalOptions="Center"/>
            </Grid>
        </Border>

    </Grid>
</ContentPage>