<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GamirSaudeApp.ViewModels"
             x:Class="GamirSaudeApp.Views.AgendarConsultaPage"
             x:Name="thisPage"
             x:DataType="vm:AgendarConsultaViewModel"
             Title="Consulta"
             Shell.BackgroundColor="#0098da"
             Shell.TitleColor="White"
             Shell.NavBarIsVisible="True">


    <Grid RowDefinitions="Auto, *" BackgroundColor="#F0F2F5">

        <Border Grid.Row="1" StrokeThickness="0" StrokeShape="RoundRectangle 20,20,0,0" BackgroundColor="White" Margin="10,20,10,0" Padding="25">
            <VerticalStackLayout Spacing="25" VerticalOptions="Start">
                <Label Text="Escolha a especialidade" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center" />

                <Border Stroke="#CCCCCC" StrokeThickness="1" StrokeShape="RoundRectangle 25" HeightRequest="55">
                    <Picker
                            ItemsSource="{Binding Especialidades}"
                            SelectedItem="{Binding EspecialidadeSelecionada}"
                            ItemDisplayBinding="{Binding Nome}"
                            TextColor="Black"
                            Margin="10,0"/>
                </Border>
                <Button Text="Ver profissionais disponíveis"
                        Command="{Binding VerProfissionaisCommand}"
                        BackgroundColor="#0098da"
                        TextColor="White"
                        CornerRadius="25"
                        HeightRequest="55" />

                <VerticalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,10,0,0">
                    <Label Text="Não encontrou sua especialidade?" />
                    <Button Text="Fale conosco" BackgroundColor= "Transparent" TextColor="#0098da" FontAttributes="Bold" />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>