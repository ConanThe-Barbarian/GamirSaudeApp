<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GamirSaudeApp.ViewModels"
             x:Class="GamirSaudeApp.Views.AgendarConsultaPage"
             x:DataType="viewmodels:AgendarConsultaViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *, Auto">

        <Grid Grid.Row="0" BackgroundColor="#0098DA" HeightRequest="80" Padding="20,10,20,0">
            <Grid ColumnDefinitions="Auto, *">
                <ImageButton Grid.Column="0"
                             HeightRequest="25"
                             WidthRequest="25"
                             HorizontalOptions="Start"
                             VerticalOptions="Center"
                             Command="{Binding VoltarCommand}"
                             BackgroundColor="Transparent">
                    <ImageButton.Source>
                        <FontImageSource Glyph="&lt;" Color="White" Size="30"/>
                    </ImageButton.Source>
                </ImageButton>

                <Label Grid.Column="1" 
                       Text="Consulta" 
                       TextColor="White" 
                       FontSize="22" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"
                       Margin="-25,0,0,0"/>
            </Grid>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="30,40" Spacing="25">

                <Label Text="Escolha uma especialidade"
                       TextColor="#0098DA"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <Border StrokeShape="RoundRectangle 15"
                        StrokeThickness="0"
                        BackgroundColor="#E3E9FF"
                        HeightRequest="55"
                        Padding="15,0">
                    <Picker 
                            TitleColor="#8EA6CC"
                            TextColor="#0098DA"
                            ItemsSource="{Binding Especialidades}"
                            SelectedItem="{Binding EspecialidadeSelecionada}"
                            VerticalOptions="Center"
                            FontAttributes="Bold"/>
                </Border>

                <Button Text="Ver Profissionais Disponiveis"
                        Command="{Binding VerProfissionaisCommand}"
                        BackgroundColor="#0098DA"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        HeightRequest="55"
                        Margin="0,10,0,0"/>

                <VerticalStackLayout Spacing="5" Margin="0,20,0,0">
                    <Label Text="Nao Encontrou Sua Especialidade?"
                           TextColor="Black"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <Label Text="Fale Conosco"
                           TextColor="#0098DA"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding FaleConoscoCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <Border Grid.Row="2" 
                Margin="20,10,20,20" 
                StrokeShape="RoundRectangle 20"
                StrokeThickness="0"
                BackgroundColor="#0098DA"
                HeightRequest="60"
                VerticalOptions="End">
            <Grid ColumnDefinitions="*,*,*,*">
                <Image Grid.Column="0" Source="home_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding HomeCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <Image Grid.Column="1" Source="chat_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ChatCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <Image Grid.Column="2" Source="profile_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ProfileCommand}" />
                    </Image.GestureRecognizers>
                </Image>

                <Image Grid.Column="3" Source="calendar_icon.png" HeightRequest="25" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding CalendarCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>

    </Grid>
</ContentPage>