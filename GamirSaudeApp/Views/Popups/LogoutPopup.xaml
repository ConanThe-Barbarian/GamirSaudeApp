<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="GamirSaudeApp.Views.Popups.LogoutPopup"
               Color="Transparent"
               >

    <Border StrokeShape="RoundRectangle 30"
            StrokeThickness="0"
            BackgroundColor="White"
            WidthRequest="350"
            VerticalOptions="End" 
            Margin="0,0,0,20"
            Padding="25">

        <VerticalStackLayout Spacing="15">
            <Label Text="Logout" 
                   TextColor="#0098DA" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>

            <Label Text="Tem certeza que deseja Sair?" 
                   TextColor="#666666" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,10"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0"
                        Text="Cancelar"
                        TextColor="#0098DA"
                        BackgroundColor="#D6E4FF"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnCancelClicked"/>

                <Button Grid.Column="1"
                        Text="Sim, Sair"
                        TextColor="White"
                        BackgroundColor="#0098DA"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        HeightRequest="45"
                        Clicked="OnConfirmClicked"/>
            </Grid>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>