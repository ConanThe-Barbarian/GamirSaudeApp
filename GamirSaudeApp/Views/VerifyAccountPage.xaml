<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:GamirSaudeApp.ViewModels"
             x:Class="GamirSaudeApp.Views.VerifyAccountPage"
             x:DataType="viewmodels:VerifyAccountViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="InputBorderStyle" TargetType="Border">
                <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="BackgroundColor" Value="#F5F5F5"/>
                <Setter Property="HeightRequest" Value="60"/>
                <Setter Property="Padding" Value="15,0"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" HeightRequest="60" Padding="20,10">
            <ImageButton Grid.Column="0" HeightRequest="25" WidthRequest="25" 
                         HorizontalOptions="Start" VerticalOptions="Center" 
                         Command="{Binding VoltarCommand}" BackgroundColor="Transparent">
                <ImageButton.Source>
                    <FontImageSource Glyph="&lt;" Color="#0098DA" Size="30"/>
                </ImageButton.Source>
            </ImageButton>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

                <Label Text="Verificação" 
                       TextColor="#0098DA" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>

                <Label Text="{Binding MensagemInfo}" 
                       TextColor="#666666" 
                       FontSize="15" 
                       HorizontalTextAlignment="Center" 
                       HorizontalOptions="Center"
                       Margin="0,0,0,20"/>

                <VerticalStackLayout Spacing="10">
                    <Label Text="Código SMS (6 dígitos)" TextColor="#0098DA" FontSize="12" FontAttributes="Bold" Margin="5,0,0,0"/>

                    <Border Style="{StaticResource InputBorderStyle}">
                        <Entry Text="{Binding Codigo}"
                               Placeholder="0 0 0 0 0 0"
                               PlaceholderColor="#CCCCCC"
                               TextColor="Black"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               Keyboard="Numeric"
                               MaxLength="6"
                               VerticalOptions="Center"/>
                    </Border>
                </VerticalStackLayout>

                <Button Text="Confirmar Verificação"
                        Command="{Binding VerificarCodigoCommand}"
                        BackgroundColor="#0098DA"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        CornerRadius="30"
                        HeightRequest="60"
                        Margin="0,20,0,0"/>

                <VerticalStackLayout Spacing="5" HorizontalOptions="Center" Margin="0,10,0,0">
                    <Label Text="Não recebeu o código?" TextColor="#999999" FontSize="14" HorizontalOptions="Center"/>
                    <Label Text="Reenviar Código" 
                           TextColor="#0098DA" 
                           FontSize="15" 
                           FontAttributes="Bold"
                           TextDecorations="Underline"
                           HorizontalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ReenviarCodigoCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>

                <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#0098DA" HorizontalOptions="Center"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>